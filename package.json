{
  "devDependencies": {
    "esbuild": "^0.14.39",
    "flag-icons": "^6.4.2",
    "tailwindcss": "^3.0.24"
  },
  "scripts": {
    "build:html": "bundle exec jekyll build -s docs -d docs/_site",
    "watch:html": "bundle exec jekyll serve -s docs -d docs/_site -b '' --livereload",
    "build:css": "npx tailwindcss -i ./src/stylesheets/tailwind.css -o ./docs/assets/stylesheets/main.css --minify",
    "watch:css": "npx tailwindcss -i ./src/stylesheets/tailwind.css -o ./docs/assets/stylesheets/main.css --minify --watch",
    "build:js": "./node_modules/.bin/esbuild ./src/javascripts/app.js --bundle --sourcemap --outfile=./docs/assets/javascripts/main.js",
    "watch:js": "./node_modules/.bin/esbuild ./src/javascripts/app.js --bundle --sourcemap --outfile=./docs/assets/javascripts/main.js --watch"
  }
}
